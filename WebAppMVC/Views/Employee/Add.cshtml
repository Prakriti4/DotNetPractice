@model Person
@{ 
    ViewData["Title"]="Add Employee";
}
<h1>Add New Employee</h1>
<hr>
<form asp-controller="Employee" asp-action="Add" method="POST">
 
    <div class="mb-3">
    <label asp-for="FirstName" class="form-label"></label>
    <span class="text-danger" asp-validation-for="FirstName"></span>
    <input type="text" class="form-control" asp-for="FirstName" placeholder="Enter First Name">
   
  </div>
   <div class="mb-3">
    <label asp-for="Surname" class="form-label"></label>
    <span class="text-danger" asp-validation-for="Surname"></span>
    <input type="text" class="form-control" asp-for="Surname" placeholder="Enter Last Name">
   
  </div>
   <div class="mb-3">
    <label asp-for="Address" class="form-label"></label>
    <textarea class="form-control" asp-for="Address" placeholder="Enter your address"></textarea>
  </div>


  <div class="mb-3">
    <label asp-for="Gender" class="form-label"></label>
    <input type="text" class="form-control" asp-for="Gender" placeholder="Enter your gender">
   
  </div>
  <div class="mb-3">
    <label asp-for="Salary" class="form-label"></label> 
    <input type="number" class="form-control" asp-for="Salary" placeholder="Enter Salary">
   
  </div>


  
  <button type="submit" class="btn btn-primary">Save Employee</button>
</form>